<h1>Results for <%= @survey.title %></h1>

<% @survey.questions.each do |question| %>
  <div class="card">
    <div class="card-header">
      <%= question.body %>
    </div>
    <div class="card-body">
      <% question.answers.each do |answer| %>
        <% if question.free? && answer.voice? %>
          <audio controls>
            <source src=<%= answer.content %> type="audio/mpeg">
            Your browser does not support the audio tag.
          </audio>
        <% else %>
          <%= answer.content %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
